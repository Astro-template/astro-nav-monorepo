{
  "name": "@astro-nav/shared",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "Shared types, utilities, and constants for Astro Nav monorepo",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./constants": {
      "types": "./dist/constants/index.d.ts",
      "import": "./dist/constants/index.js"
    }
  },
  "files": [
    "dist",
    "config"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3",
    "@vitest/coverage-v8": "^4.0.3"
  }
}
